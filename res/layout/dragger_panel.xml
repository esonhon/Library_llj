<?xml version="1.0" encoding="utf-8"?>
<com.common.library.llj.dragger.DraggerView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:drag="http://schemas.android.com/apk/res-auto"
                                            android:id="@+id/dragger_view"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            drag:drag_useDefaultSpringAnimWhenStartActivity="false"
                                            drag:drag_view_id="@+id/drag_view"
                                            drag:shadow_view_id="@+id/shadow_view"
    >

    <FrameLayout
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/drag_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</com.common.library.llj.dragger.DraggerView>